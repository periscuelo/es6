{
  "name": "ecmascript2015-fast-course",
  "version": "1.0.0",
  "description": "A simple bunch of examples used as an overview about ES6 (ECMAScript 2015)",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "http-server ./dist/",
    "lint": "eslint",
    "dev": "npm run clean && webpack --mode development",
    "build": "npm run clean && webpack --mode production",
    "nodemon": "nodemon",
    "serve": "webpack-dev-server --mode development",
    "hot": "cross-env NODE_ENV=hot webpack-dev-server --mode development",
    "express": "cross-env NODE_ENV=development PORT=8080 node server.js",
    "express:prod": "npm run build && cross-env PORT=8081 node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Especializa/es6.git"
  },
  "keywords": [
    "ES6",
    "ECMASscript2015",
    "ES2015",
    "ES6 modules",
    "Webpack",
    "Webpack 4"
  ],
  "author": "Jose Berardo Cunha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Especializa/es6/issues"
  },
  "homepage": "https://github.com/Especializa/es6#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "express": "^4.16.3",
    "file-loader": "^2.0.0",
    "html-es6-template-loader": "^1.0.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "image-webpack-loader": "^4.3.1",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.2.0",
    "webpack-dev-server": "^3.1.6"
  },
  "dependencies": {
    "moment": "^2.22.2"
  }
}
